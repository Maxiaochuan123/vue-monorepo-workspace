{
  "name": "vue-monorepo-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Vue 3 Monorepo with shared components, utils and composables",
  "scripts": {
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter @myorg/app",
    "dev:admin": "turbo dev --filter @myorg/app-admin",
    "build": "turbo build",
    "build:shared": "turbo build --filter @myorg/shared",
    "build:app": "turbo build --filter @myorg/app",
    "build:admin": "turbo build --filter @myorg/app-admin",
    "lint": "turbo lint",
    "clean": "turbo clean && rimraf node_modules",
    "change": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.9",
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@types/node": "catalog:",
    "turbo": "catalog:"
  }
}
